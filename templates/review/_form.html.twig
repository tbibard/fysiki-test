{{ form_start(form, {'attr': {'id': 'review-form', 'novalidate': 'novalidate'}}) }}
    {{ form_widget(form) }}

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="note">Note</label>
        <div class="col-sm-10">
            <div class="btn-group" role="group" aria-label="note">
                <button type="button" class="btn btn-secondary btn-note" data-note="1">1</button>
                <button type="button" class="btn btn-secondary btn-note" data-note="2">2</button>
                <button type="button" class="btn btn-secondary btn-note" data-note="3">3</button>
                <button type="button" class="btn btn-secondary btn-note" data-note="4">4</button>
                <button type="button" class="btn btn-secondary btn-note" data-note="5">5</button>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-7">
            <button id="review-submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
{{ form_end(form) }}
